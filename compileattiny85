rm *.elf
rm *.o
rm *.hex
avr-gcc -mmcu=attiny85 -std=gnu99 -Wall -Os -o main.elf main.c -w
avr-objcopy -j .text -j .data -O ihex main.elf main.hex
avr-size --mcu=attiny85 --format=avr main.elf
# default fuse values -  lfuse:w:0x62:m hfuse:w:0xdf:m
# flashing ATTINY85 fuses for 16MHz clock frequency (PLL Clock without DIV8) - settings from Digispark
# lfuse  F1 (CKSEL 001, SUT 11 i.e. 16MHz PLL clock, 16CK/14CK + 64ms)
# hfuse  DD (Brownout detection level1 2.8V)
sudo avrdude -c usbasp -p attiny85  -U lfuse:w:0xf1:m -U hfuse:w:0xdd:m -U flash:w:"main.hex":a
